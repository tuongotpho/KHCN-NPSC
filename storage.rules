
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Hàm kiểm tra người dùng đã đăng nhập
    function isAuthenticated() {
      return request.auth != null;
    }

    // 1. CHO PHÉP UPLOAD CÔNG KHAI (Cho người dùng đăng ký sáng kiến)
    // Bao gồm cả file đơn, tài liệu đính kèm và ảnh
    match /pending_initiatives/{allPaths=**} {
       allow read: if true; 
       allow write: if true; // Public write để người chưa login có thể gửi file
    }

    // 2. Folder dành cho sáng kiến đã duyệt và đề tài nghiên cứu
    match /initiatives/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    match /research/{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // 3. Các folder khác mặc định
    match /{allPaths=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
  }
}
