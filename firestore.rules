rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Hàm kiểm tra người dùng đã đăng nhập (Admin)
    function isAuthenticated() {
      return request.auth != null;
    }

    // 1. Collection Sáng kiến
    match /initiatives/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // 2. Collection Đề tài KHCN
    match /research_projects/{document=**} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // 3. Collection Cấu hình (MỚI)
    // Bắt buộc phải có để tính năng tính điểm động hoạt động
    match /settings/{document=**} {
      allow read: if true; // Cho phép public đọc để tính điểm hiển thị
      allow write: if isAuthenticated(); // Chỉ cho phép Admin ghi đè cấu hình
    }
  }
}